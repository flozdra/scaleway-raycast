{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "scaleway",
  "title": "Scaleway",
  "description": "Display information about scaleway organisation",
  "icon": "scaleway.png",
  "author": "flozdra",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "containers",
      "title": "Containers",
      "description": "Get information about containers",
      "mode": "view",
      "icon": "containers.png"
    },
    {
      "name": "instances",
      "title": "Instances",
      "description": "Get information about instances",
      "mode": "view",
      "icon": "instances.png"
    },
    {
      "name": "databases",
      "title": "Databases",
      "description": "Get information about databases",
      "mode": "view",
      "icon": "databases.png"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.41.1",
    "@raycast/utils": "^1.4.9",
    "highlight.js": "^11.6.0",
    "luxon": "^3.0.4",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@types/luxon": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "preferences": [
    {
      "name": "secretKey",
      "title": "Secret Key",
      "description": "Your Scaleway project API Token",
      "type": "password",
      "default": "",
      "required": true
    },
    {
      "name": "logMessageKey",
      "title": "Container log message Key",
      "description": "Display the key of the parsed container log.",
      "type": "textfield",
      "default": "",
      "required": false
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
